$sql = "SELECT * FROM `registration` WHERE email='$email'";
$query_run = mysqli_query($con,$sql);
if(mysqli_num_rows($query_run)>0)
{
	?>
	<script>alert('Email is already exists!');</script>
	<?php
}
else
{
$sql = "INSERT INTO registration (fname, lname, email, password, cpassword, dob, phonenumber, height, weight, gender) VALUES ('$fname','$lname','$email','$password','$cpassword','$dob','$phonenumber','$height','$weight','$gender')";
$query_run = mysqli_query($con,$sql);
if($query_run)
{
header('location:register.php');
}
else{
header('location:register.php');
}
}

